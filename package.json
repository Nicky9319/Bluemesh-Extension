{
  "name": "bluemesh",
  "displayName": "Bluemesh",
  "description": "This is Extension to get into the bluemesh ecosystem to Build Backend Servers really Quick While Managing Test cases, Documentation, Infra etc...",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "bluemesh.activate",
      "title": "Bluemesh"
    }, {
      "command": "bluemesh.refreshDirectory",
      "title": "Refresh",
      "icon": "$(refresh)"
    }],
    "viewsContainers": {
      "activitybar": [{
        "id": "bluemesh-explorer",
        "title": "Bluemesh Explorer",
        "icon": "$(folder-opened)"
      }]
    },
    "views": {
      "bluemesh-explorer": [{
        "id": "bluemesh.directoryView",
        "name": "Directory Contents",
        "when": "true"
      }]
    },
    "menus": {
      "view/title": [{
        "command": "bluemesh.refreshDirectory",
        "when": "view == bluemesh.directoryView",
        "group": "navigation"
      }]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
